    <script>
        // ë°ì´í„° ì €ì¥ì†Œ
        let questions = JSON.parse(localStorage.getItem('studyQuestions') || '[]');
        let history = JSON.parse(localStorage.getItem('studyHistory') || '[]');
        let currentQuiz = null;
        let currentQuestionIndex = 0;
        let quizResults = [];

        // íƒ­ ì „í™˜ í•¨ìˆ˜
        function showTab(tabName, element) {
            // ëª¨ë“  íƒ­ ìˆ¨ê¸°ê¸°
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('active');
            });

            // ì„ íƒëœ íƒ­ ë³´ì´ê¸°
            document.getElementById(tabName).classList.add('active');
            if (element) {
                element.classList.add('active');
            } else {
                // í•´ë‹¹í•˜ëŠ” ë²„íŠ¼ ì°¾ì•„ì„œ active í´ë˜ìŠ¤ ì¶”ê°€
                const buttons = document.querySelectorAll('.nav-btn');
                buttons.forEach(btn => {
                    if (btn.textContent.includes(getTabName(tabName))) {
                        btn.classList.add('active');
                    }
                });
            }

            // íƒ­ë³„ ë°ì´í„° ë¡œë“œ
            if (tabName === 'quiz') loadQuizTab();
            else if (tabName === 'stats') loadStatsTab();
            else if (tabName === 'history') loadHistoryTab();
        }

        // íƒ­ ì´ë¦„ ë§¤í•‘
        function getTabName(tabId) {
            const names = {
                'create': 'ìƒˆ ë¬¸ì œ ë§Œë“¤ê¸°',
                'quiz': 'í€´ì¦ˆ í’€ê¸°',
                'stats': 'í†µê³„ ë³´ê¸°',
                'history': 'í•™ìŠµ ê¸°ë¡',
                'settings': 'ì„¤ì •'
            };
            return names[tabId] || '';
        }

        // ë¬¸ì œ ì €ì¥
        document.getElementById('questionForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const questionData = {
                id: Date.now(),
                subject: document.getElementById('subject').value,
                topic: document.getElementById('topic').value,
                question: document.getElementById('question').value,
                answer: document.getElementById('answer').value,
                explanation: document.getElementById('explanation').value,
                createdAt: new Date().toISOString()
            };

            questions.push(questionData);
            localStorage.setItem('studyQuestions', JSON.stringify(questions));

            showAlert('ë¬¸ì œê°€ ì„±ê³µì ìœ¼ë¡œ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤!', 'success');
            clearForm();
        });

        // í¼ ì´ˆê¸°í™”
        function clearForm() {
            document.getElementById('questionForm').reset();
        }

        // í€´ì¦ˆ íƒ­ ë¡œë“œ
        function loadQuizTab() {
            const content = document.getElementById('quizContent');

            if (questions.length === 0) {
                content.innerHTML = `
                    <div class="empty-state">
                        <h3>ì €ì¥ëœ ë¬¸ì œê°€ ì—†ìŠµë‹ˆë‹¤</h3>
                        <p>ë¨¼ì € "ìƒˆ ë¬¸ì œ ë§Œë“¤ê¸°" íƒ­ì—ì„œ ë¬¸ì œë¥¼ ë§Œë“¤ì–´ì£¼ì„¸ìš”.</p>
                    </div>
                `;
                return;
            }

            if (!currentQuiz) {
                content.innerHTML = `
                    <div class="alert alert-info">
                        ì´ ${questions.length}ê°œì˜ ë¬¸ì œê°€ ì¤€ë¹„ë˜ì–´ ìˆìŠµë‹ˆë‹¤. í€´ì¦ˆë¥¼ ì‹œì‘í•´ë³´ì„¸ìš”!
                    </div>
                    <button class="btn" onclick="startQuiz()">í€´ì¦ˆ ì‹œì‘</button>
                    <button class="btn btn-secondary" onclick="startSubjectQuiz()">ê³¼ëª©ë³„ í€´ì¦ˆ</button>
                `;
            }
        }

        // í€´ì¦ˆ ì‹œì‘
        function startQuiz() {
            currentQuiz = [...questions].sort(() => Math.random() - 0.5);
            currentQuestionIndex = 0;
            quizResults = [];
            showQuestion();
        }

        // ê³¼ëª©ë³„ í€´ì¦ˆ
        function startSubjectQuiz() {
            const subjects = [...new Set(questions.map(q => q.subject))];
            let modal = `
                <h3>ê³¼ëª© ì„ íƒ</h3>
                <div class="form-group">
                    <select id="subjectSelect">
                        ${subjects.map(s => `<option value="${s}">${s}</option>`).join('')}
                    </select>
                </div>
                <button class="btn" onclick="startSelectedSubjectQuiz()">ì‹œì‘</button>
            `;
            showModal(modal);
        }

        function startSelectedSubjectQuiz() {
            const selectedSubject = document.getElementById('subjectSelect').value;
            currentQuiz = questions.filter(q => q.subject === selectedSubject).sort(() => Math.random() - 0.5);
            currentQuestionIndex = 0;
            quizResults = [];
            closeModal();
            showQuestion();
        }

        // ë¬¸ì œ í‘œì‹œ
        function showQuestion() {
            if (currentQuestionIndex >= currentQuiz.length) {
                showResults();
                return;
            }

            const q = currentQuiz[currentQuestionIndex];
            const content = document.getElementById('quizContent');

            content.innerHTML = `
                <div class="score-display">
                    <h3>ë¬¸ì œ ${currentQuestionIndex + 1} / ${currentQuiz.length}</h3>
                    <p>${q.subject} - ${q.topic}</p>
                </div>

                <div class="question-item">
                    <h4>ë¬¸ì œ</h4>
                    <p>${q.question}</p>
                </div>

                <div class="form-group">
                    <label for="userAnswer">ë‹µì•ˆ</label>
                    <textarea id="userAnswer" placeholder="ë‹µì•ˆì„ ì…ë ¥í•˜ì„¸ìš”..."></textarea>
                </div>

                <button class="btn" onclick="checkAnswer()">ë‹µì•ˆ í™•ì¸</button>
                <button class="btn btn-secondary" onclick="skipQuestion()">ê±´ë„ˆë›°ê¸°</button>
            `;
        }

        // ë‹µì•ˆ í™•ì¸
        function checkAnswer() {
            const userAnswer = document.getElementById('userAnswer').value.trim();
            const correctAnswer = currentQuiz[currentQuestionIndex].answer;

            if (!userAnswer) {
                alert('ë‹µì•ˆì„ ì…ë ¥í•´ì£¼ì„¸ìš”.');
                return;
            }

            showAnswerModal(userAnswer, correctAnswer);
        }

        // ë‹µì•ˆ ëª¨ë‹¬ í‘œì‹œ
        function showAnswerModal(userAnswer, correctAnswer) {
            const q = currentQuiz[currentQuestionIndex];
            let modal = `
                <h3>ë‹µì•ˆ í™•ì¸</h3>
                <div class="question-item">
                    <h4>ë‚´ ë‹µì•ˆ</h4>
                    <p>${userAnswer}</p>
                </div>
                <div class="question-item">
                    <h4>ì •ë‹µ</h4>
                    <p>${correctAnswer}</p>
                </div>
                ${q.explanation ? `<div class="question-item"><h4>í•´ì„¤</h4><p>${q.explanation}</p></div>` : ''}

                <p style="margin: 20px 0;"><strong>ìŠ¤ìŠ¤ë¡œ ì±„ì í•´ì£¼ì„¸ìš”:</strong></p>
                <button class="btn btn-success" onclick="markAnswer(100)">ì™„ì „íˆ ë§ìŒ (100ì )</button>
                <button class="btn" onclick="markAnswer(70)">ëŒ€ë¶€ë¶„ ë§ìŒ (70ì )</button>
                <button class="btn btn-secondary" onclick="markAnswer(30)">ë¶€ë¶„ì ìœ¼ë¡œ ë§ìŒ (30ì )</button>
                <button class="btn btn-danger" onclick="markAnswer(0)">í‹€ë¦¼ (0ì )</button>
            `;
            showModal(modal);
        }

        // ë‹µì•ˆ ì±„ì 
        function markAnswer(score) {
            const q = currentQuiz[currentQuestionIndex];
            quizResults.push({
                question: q,
                score: score,
                maxScore: 100
            });

            closeModal();
            currentQuestionIndex++;
            showQuestion();
        }

        // ë¬¸ì œ ê±´ë„ˆë›°ê¸°
        function skipQuestion() {
            const q = currentQuiz[currentQuestionIndex];
            quizResults.push({
                question: q,
                score: 0,
                maxScore: 100,
                skipped: true
            });

            currentQuestionIndex++;
            showQuestion();
        }

        // ê²°ê³¼ í‘œì‹œ
        function showResults() {
            const totalScore = quizResults.reduce((sum, r) => sum + r.score, 0);
            const maxScore = quizResults.length * 100;
            const percentage = Math.round((totalScore / maxScore) * 100);

            // íˆìŠ¤í† ë¦¬ì— ì €ì¥
            const testResult = {
                date: new Date().toISOString(),
                subject: currentQuiz[0].subject,
                totalQuestions: quizResults.length,
                totalScore: totalScore,
                maxScore: maxScore,
                percentage: percentage,
                results: quizResults
            };

            history.push(testResult);
            localStorage.setItem('studyHistory', JSON.stringify(history));

            const content = document.getElementById('quizContent');
            content.innerHTML = `
                <div class="score-display">
                    <h3>${percentage}ì </h3>
                    <p>${totalScore} / ${maxScore}ì </p>
                </div>

                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>${quizResults.length}</h3>
                        <p>ì´ ë¬¸ì œ ìˆ˜</p>
                    </div>
                    <div class="stat-card">
                        <h3>${quizResults.filter(r => r.score >= 70).length}</h3>
                        <p>ì˜ ë§ì¶˜ ë¬¸ì œ</p>
                    </div>
                    <div class="stat-card">
                        <h3>${quizResults.filter(r => r.score < 70).length}</h3>
                        <p>ë³µìŠµ í•„ìš”</p>
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <button class="btn" onclick="resetQuiz()">ë‹¤ì‹œ í€´ì¦ˆ</button>
                    <button class="btn btn-secondary" onclick="showTab('stats')">í†µê³„ ë³´ê¸°</button>
                </div>
            `;

            currentQuiz = null;
        }

        // í€´ì¦ˆ ë¦¬ì…‹
        function resetQuiz() {
            currentQuiz = null;
            loadQuizTab();
        }

        // í†µê³„ íƒ­ ë¡œë“œ
        function loadStatsTab() {
            const content = document.getElementById('statsContent');

            if (history.length === 0) {
                content.innerHTML = `
                    <div class="empty-state">
                        <h3>ì•„ì§ í€´ì¦ˆ ê¸°ë¡ì´ ì—†ìŠµë‹ˆë‹¤</h3>
                        <p>í€´ì¦ˆë¥¼ í’€ì–´ë³´ì‹œë©´ í†µê³„ê°€ í‘œì‹œë©ë‹ˆë‹¤.</p>
                    </div>
                `;
                return;
            }

            const totalTests = history.length;
            const totalQuestions = history.reduce((sum, h) => sum + h.totalQuestions, 0);
            const avgScore = Math.round(history.reduce((sum, h) => sum + h.percentage, 0) / totalTests);
            const recentScore = history[history.length - 1].percentage;

            content.innerHTML = `
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>${totalTests}</h3>
                        <p>ì´ í…ŒìŠ¤íŠ¸ íšŸìˆ˜</p>
                    </div>
                    <div class="stat-card">
                        <h3>${totalQuestions}</h3>
                        <p>í‘¼ ë¬¸ì œ ìˆ˜</p>
                    </div>
                    <div class="stat-card">
                        <h3>${avgScore}%</h3>
                        <p>í‰ê·  ì ìˆ˜</p>
                    </div>
                    <div class="stat-card">
                        <h3>${recentScore}%</h3>
                        <p>ìµœê·¼ ì ìˆ˜</p>
                    </div>
                </div>

                <div style="margin-top: 30px;">
                    <h3>ê³¼ëª©ë³„ í†µê³„</h3>
                    <div id="subjectStats"></div>
                </div>
            `;

            // ê³¼ëª©ë³„ í†µê³„
            const subjectStats = {};
            history.forEach(h => {
                if (!subjectStats[h.subject]) {
                    subjectStats[h.subject] = { tests: 0, totalScore: 0, questions: 0 };
                }
                subjectStats[h.subject].tests++;
                subjectStats[h.subject].totalScore += h.percentage;
                subjectStats[h.subject].questions += h.totalQuestions;
            });

            const subjectStatsHtml = Object.entries(subjectStats).map(([subject, stats]) => `
                <div class="history-item">
                    <div class="subject">${subject}</div>
                    <p>í…ŒìŠ¤íŠ¸: ${stats.tests}íšŒ | í‰ê· : ${Math.round(stats.totalScore / stats.tests)}% | ë¬¸ì œ: ${stats.questions}ê°œ</p>
                </div>
            `).join('');

            document.getElementById('subjectStats').innerHTML = subjectStatsHtml;
        }

        // íˆìŠ¤í† ë¦¬ íƒ­ ë¡œë“œ
        function loadHistoryTab() {
            const content = document.getElementById('historyContent');

            if (history.length === 0) {
                content.innerHTML = `
                    <div class="empty-state">
                        <h3>í•™ìŠµ ê¸°ë¡ì´ ì—†ìŠµë‹ˆë‹¤</h3>
                        <p>í€´ì¦ˆë¥¼ í’€ì–´ë³´ì‹œë©´ ê¸°ë¡ì´ ì €ì¥ë©ë‹ˆë‹¤.</p>
                    </div>
                `;
                return;
            }

            const historyHtml = history.slice().reverse().map(h => `
                <div class="history-item">
                    <div class="date">${new Date(h.date).toLocaleDateString('ko-KR')} ${new Date(h.date).toLocaleTimeString('ko-KR')}</div>
                    <div class="subject">${h.subject}</div>
                    <div class="score">${h.percentage}% (${h.totalScore}/${h.maxScore})</div>
                    <p>${h.totalQuestions}ë¬¸ì œ ì¤‘ ${h.results.filter(r => r.score >= 70).length}ë¬¸ì œ ì˜ ë§ì¶¤</p>
                </div>
            `).join('');

            content.innerHTML = `
                <div style="margin-bottom: 20px;">
                    <button class="btn btn-danger" onclick="clearHistory()">ê¸°ë¡ ì‚­ì œ</button>
                </div>
                ${historyHtml}
            `;
        }

        // ê¸°ë¡ ì‚­ì œ
        function clearHistory() {
            if (confirm('ëª¨ë“  í•™ìŠµ ê¸°ë¡ì„ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ?')) {
                history = [];
                localStorage.setItem('studyHistory', JSON.stringify(history));
                loadHistoryTab();
                showAlert('í•™ìŠµ ê¸°ë¡ì´ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
            }
        }

        // ëª¨ë“  ë°ì´í„° ì‚­ì œ
        function clearAllData() {
            if (confirm('ëª¨ë“  ë°ì´í„°(ë¬¸ì œ, ê¸°ë¡)ë¥¼ ì‚­ì œí•˜ì‹œê² ìŠµë‹ˆê¹Œ? ì´ ì‘ì—…ì€ ë˜ëŒë¦´ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.')) {
                questions = [];
                history = [];
                localStorage.removeItem('studyQuestions');
                localStorage.removeItem('studyHistory');
                showAlert('ëª¨ë“  ë°ì´í„°ê°€ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
                location.reload();
            }
        }

        // ë°ì´í„° ë‚´ë³´ë‚´ê¸°
        function exportData() {
            const data = {
                questions: questions,
                history: history,
                exportDate: new Date().toISOString()
            };

            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `study-data-${new Date().toISOString().split('T')[0]}.json`;
            a.click();
            URL.revokeObjectURL(url);

            showAlert('ë°ì´í„°ê°€ ë‚´ë³´ë‚´ê¸°ë˜ì—ˆìŠµë‹ˆë‹¤.', 'success');
        }

        // ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
        function importData() {
            document.getElementById('importFile').click();
        }

        function handleImport(event) {
            const file = event.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const data = JSON.parse(e.target.result);
                    if (data.questions && data.history) {
                        questions = data.questions;
                        history = data.history;
                        localStorage.setItem('studyQuestions', JSON.stringify(questions));
                        localStorage.setItem('studyHistory', JSON.stringify(history));
                        showAlert('ë°ì´í„°ê°€ ì„±ê³µì ìœ¼ë¡œ ê°€ì ¸ì™”ìŠµë‹ˆë‹¤.', 'success');
                        location.reload();
                    } else {
                        throw new Error('ì˜ëª»ëœ íŒŒì¼ í˜•ì‹ì…ë‹ˆë‹¤.');
                    }
                } catch (error) {
                    alert('íŒŒì¼ì„ ì½ëŠ” ì¤‘ ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤: ' + error.message);
                }
            };
            reader.readAsText(file);
        }

        // ëª¨ë‹¬ ê´€ë ¨ í•¨ìˆ˜
        function showModal(content) {
            document.getElementById('modalContent').innerHTML = content;
            document.getElementById('modal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }

        // ì•Œë¦¼ í‘œì‹œ
        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type}`;
            alertDiv.textContent = message;

            const content = document.querySelector('.tab-content.active');
            // ê¸°ì¡´ì— ìˆë˜ ì•Œë¦¼ì„ ì œê±°í•˜ì—¬ ì¤‘ë³µ í‘œì‹œ ë°©ì§€
            const existingAlert = content.querySelector('.alert');
            if (existingAlert) {
                existingAlert.remove();
            }

            content.insertBefore(alertDiv, content.firstChild);

            setTimeout(() => {
                alertDiv.remove();
            }, 3000);
        }

        // ëª¨ë‹¬ ì™¸ë¶€ í´ë¦­ì‹œ ë‹«ê¸°
        document.getElementById('modal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // í˜ì´ì§€ ë¡œë“œì‹œ ì´ˆê¸°í™”
        document.addEventListener('DOMContentLoaded', function() {
            showTab('create'); // 'create' íƒ­ì´ ê¸°ë³¸ìœ¼ë¡œ í™œì„±í™”ë˜ë„ë¡ ë³€ê²½
        });
    </script>
</body>
